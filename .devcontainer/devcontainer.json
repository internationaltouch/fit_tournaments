{
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt && python manage.py migrate",
  "postCreateCommand": "",
  "postAttachCommand": {
    "sslserver": "python manage.py runsslserver 8443"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "portsAttributes": {
    "8443": {
      "label": "Application",
      "protocol": "https"
    }
  },
  "forwardPorts": [
    8443
  ]
}
